    <script>
        const API_URL = 'http://localhost:5000/api/dashboard-data';
        
        async function fetchData() {
            try {
                const res = await fetch(API_URL);
                const data = await res.json();
                updateDashboard(data);
            } catch (e) {
                console.log('Using mock data');
                useMockData();
            }
        }
        
        function updateDashboard(data) {
            document.getElementById('totalVolume').textContent = '$' + (data.total_volume || 0).toFixed(2);
            document.getElementById('etbVolume').textContent = (data.total_etb || 0).toLocaleString() + ' ETB';
            document.getElementById('usdVolume').textContent = '$' + (data.total_usd || 0).toFixed(2);
            document.getElementById('totalDeals').textContent = data.total_deals || 0;
            document.getElementById('completedDeals').textContent = data.total_completed || 0;
            document.getElementById('refundedDeals').textContent = data.total_refunded || 0;
            document.getElementById('cancelledDeals').textContent = data.total_cancelled || 0;
            document.getElementById('activeDeals').textContent = data.total_active || 0;
            document.getElementById('groupsCount').textContent = `üìä ${data.groups_count || 0} groups`;
            
            let adminHtml = '';
            (data.admins_list || []).forEach(a => {
                adminHtml += `
                    <div class="admin-item">
                        <span class="admin-name">${a.name}</span>
                        <span class="admin-stats">${a.deals} deals $${a.usd} USD ${a.etb} ETB</span>
                    </div>
                `;
            });
            document.getElementById('adminList').innerHTML = adminHtml || '<div class="admin-item">No data</div>';
            
            let userHtml = '';
            (data.top_users || []).slice(0,10).forEach(u => {
                userHtml += `
                    <div class="admin-item">
                        <span class="admin-name">${u.name}</span>
                        <span class="admin-stats">$${u.volume.toFixed(2)}</span>
                    </div>
                `;
            });
            document.getElementById('userList').innerHTML = userHtml || '<div class="admin-item">No data</div>';
            
            let recentHtml = '';
            (data.recent_deals || []).slice(0,10).forEach(d => {
                recentHtml += `
                    <div class="admin-item">
                        <div>
                            <span class="admin-name">${d.id}</span>
                            <span class="status-badge status-${d.status}">${d.status}</span>
                        </div>
                        <div>${d.currency === 'USD' ? '$' : ''}${d.amount} ${d.currency !== 'USD' ? d.currency : ''}</div>
                    </div>
                `;
            });
            document.getElementById('recentDealsList').innerHTML = recentHtml || '<div class="admin-item">No data</div>';
            
            const now = new Date();
            document.getElementById('timestamp').textContent = 'Updated: ' + now.toLocaleString();
            document.getElementById('updateTime').textContent = now.toLocaleTimeString();
        }
        
        function useMockData() {
            updateDashboard({
                total_volume: 18420.50,
                total_etb: 110000,
                total_usd: 1470.90,
                total_deals: 146,
                total_completed: 135,
                total_refunded: 8,
                total_cancelled: 3,
                total_active: 5,
                groups_count: 12,
                admins_list: [
                    {name: '@Agegenewu0102', deals: 63, usd: 656.50, etb: 93000},
                    {name: '@Mr_JOKER_UP', deals: 40, usd: 471.30, etb: 4613},
                    {name: '@Joker_Bv', deals: 34, usd: 83.04, etb: 4250}
                ],
                top_users: [
                    {name: '@BigTrader', volume: 3450.75},
                    {name: '@CryptoKing', volume: 2890.50}
                ],
                recent_deals: [
                    {id: 'DVA1234', status: 'completed', amount: 500, currency: 'USD'},
                    {id: 'DVA1235', status: 'active', amount: 1000, currency: 'ETB'}
                ]
            });
        }
        
        fetchData();
        setInterval(fetchData, 30000);
    </script>
